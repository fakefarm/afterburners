    title Afterburners
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = filepicker_js_include_tag
    = csrf_meta_tags
    = render 'layouts/shared/font_awesome'
    = render 'layouts/shared/typekit'
